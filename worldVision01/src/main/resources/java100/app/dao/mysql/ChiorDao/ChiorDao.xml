<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- DAO 객체를 자동으로 생성하려면, namespace의 값이 인터페이스 이름과 같아야 한다. -->
<mapper namespace="java100.app.dao.ChoirDao.Choir01Dao">

	<resultMap type="choir01" id="choir01">
		<id column="c_no" property="c_no" />
		<!-- 컬럼 이름과 프로퍼티 이름이 같아서 생략! -->
		<!-- <result column="name" property="name"/> <result column="email" property="email"/> -->
	</resultMap>

	<sql id="select1">
		select
		*
	</sql>
	<select id="findAll" resultMap="choir01" parameterType="map">
		<include refid="select1" />
		from bluead_chior


		<choose>
			<when test="select == 'all'">
				<where> <!-- 제목,내용,글쓴이 -->
					or title like '%${word}%'
					or contents like '%${word}%'
				</where>
			</when>

			<when test="select == 'title'">
				<if test="words != null">
					<where>
						<foreach collection="words" item="word">
							or title like
							'%${word}%'
						</foreach>
					</where>
				</if>
			</when>

			<when test="select == 'contents'">
				<if test="words != null">
					<where>
						<foreach collection="words" item="word">
							or contents like
							'%${word}%'
						</foreach>
					</where>
				</if>
			</when>

		</choose>
		order by c_no desc
		limit #{startIndex}, #{size}

	</select>



	<select id="countAll" resultType="int">
		select count(*)
		from bluead_chior

	<choose>
			<when test="select == 'all'">
				<where> <!-- 제목,내용,글쓴이 -->
					or title like '%${word}%'
					or contents like '%${word}%'
				</where>
			</when>

			<when test="select == 'title'">
				<if test="words != null">
					<where>
						<foreach collection="words" item="word">
							or title like
							'%${word}%'
						</foreach>
					</where>
				</if>
			</when>

			<when test="select == 'contents'">
				<if test="words != null">
					<where>
						<foreach collection="words" item="word">
							or contents like
							'%${word}%'
						</foreach>
					</where>
				</if>
			</when>

		</choose>
</select>
<select id="findByNo" resultMap="choir01" parameterType="int">
		<include refid="select1" />
		from bluead_chior
		where c_no=#{value}
	</select>
	<update id="choirUpdate" parameterType="choir01">
	   update bluead_chior set
       title=#{title},
       contents=#{contents},
       img1_micro=#{img1_micro}
	   where c_no=#{c_no}
	</update>

</mapper>  









