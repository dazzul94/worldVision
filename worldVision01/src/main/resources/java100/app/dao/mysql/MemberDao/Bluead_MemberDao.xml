<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- DAO 객체를 자동으로 생성하려면, namespace의 값이 인터페이스 이름과 같아야 한다. -->
<mapper namespace="java100.app.dao.MemberDao.Bluead_MemberDao">

	<resultMap type="bluead_Member" id="bluead_MemberMap">
		<id column="no" property="no" />
		<!-- 컬럼 이름과 프로퍼티 이름이 같아서 생략! -->
		<!-- <result column="name" property="name"/> <result column="email" property="email"/> -->
	</resultMap>

	<sql id="select1">
		select
		*
	</sql>

	<select id="findAll" resultMap="bluead_MemberMap" parameterType="map">
		<include refid="select1" />
		from bluead_member
		<choose>
			<when test="select == 'all'">
				<where> <!-- 이름, 아이디 -->
					or member_name like '%${word}%'
					or member_id like '%${word}%'

				</where>
			</when>

			<when test="select == 'member_name'">
				<if test="words != null">
					<where>
						<foreach collection="words" item="word">
							or member_name like
							'%${word}%'
						</foreach>
					</where>
				</if>
			</when>

			<when test="select == 'member_id'">
				<if test="words != null">
					<where>
						<foreach collection="words" item="word">
							or member_id like
							'%${word}%'
						</foreach>
					</where>
				</if>
			</when>

		</choose>
		order by no desc
		limit #{startIndex}, #{size}
	</select>

	<select id="findByNo" resultMap="bluead_MemberMap"
		parameterType="int">
		<include refid="select1" />
		from bluead_member
		where no=#{value}
	</select>
	
	
	
	<select id="countAll" resultType="int" parameterType="map">
		select count(*) from
		bluead_member


		<choose>
			<when test="select == 'all'">
				<where> <!-- 이름, 아이디 -->
					or member_name like '%${word}%'
					or member_id like '%${word}%'

				</where>
			</when>

			<when test="select == 'member_name'">
				<if test="words != null">
					<where>
						<foreach collection="words" item="word">
							or member_name like
							'%${word}%'
						</foreach>
					</where>
				</if>
			</when>

			<when test="select == 'member_id'">
				<if test="words != null">
					<where>
						<foreach collection="words" item="word">
							or member_id like
							'%${word}%'
						</foreach>
					</where>
				</if>
			</when>
		</choose>
	</select>


	<delete id="deleteAll" parameterType="map">
		<if test="numbers != null">
			<foreach collection="numbers" item="number">
				delete from bluead_member where no=${number};
			</foreach>
		</if>
	</delete>

	<delete id="delete" parameterType="int">
		delete from bluead_member
		where no=#{value}
	</delete>


	<update id="update" parameterType="bluead_Member">
		update bluead_member set
		member_name=#{member_name} where no=#{no}
	</update>
	
	<!--  
    <insert id="insert" parameterType="bluead_Member">
        insert into bluead_member(member_birth1,member_birth2)
        values(#{member_birth1},#{member_birth2})
    </insert> -->
</mapper>  









